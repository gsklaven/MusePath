{
  "openapi": "3.0.3",
  "info": {
    "title": "Museum Navigation API",
    "version": "1.0.0",
    "description": "RESTful API for museum visitor navigation, map interaction, and destination routing."
  },
  "paths": {
    "/maps/{mapId}": {
      "get": {
        "summary": "Get map data",
        "parameters": [
          {
            "name": "mapId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "zoom",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "rotation",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Map data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Map"
                }
              }
            }
          }
        }
      }
    },
    "/maps": {
      "post": {
        "summary": "Upload map",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MapUpload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Uploaded map ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "mapId": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/coordinates/{userId}": {
      "get": {
        "summary": "Get current user coordinates",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Current location",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Coordinate"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update current user coordinates",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CoordinateUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Update status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "gpsUpdated": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/destinations": {
      "get": {
        "summary": "List all destinations",
        "parameters": [
          {
            "name": "mapId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of destinations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Destination"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Upload destinations data",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DestinationUpload"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Upload response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "destinationsId": {
                      "type": "integer"
                    },
                    "destinationData": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/destinations/{destinationId}": {
      "get": {
        "summary": "Get destination info or alternative suggestions",
        "parameters": [
          {
            "name": "destinationId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "currentTime",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Destination data or alternatives",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DestinationResponse"
                }
              }
            }
          }
        }
      }
    },
    "/routes": {
      "post": {
        "summary": "Calculate route",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RouteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Route info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteCalculation"
                }
              }
            }
          }
        }
      }
    },
    "/routes/{routeId}": {
      "get": {
        "summary": "Get route details or ETA",
        "parameters": [
          {
            "name": "routeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "walkingSpeed",
            "in": "query",
            "required": false,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Route info or ETA",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RouteETA"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update route stops",
        "parameters": [
          {
            "name": "routeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RouteUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Route update result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "stopsUpdated": {
                      "type": "boolean"
                    },
                    "newEstimatedTime": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/notifications": {
      "post": {
        "summary": "Send user notification",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NotificationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Notification sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Notification"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Map": {
        "type": "object",
        "properties": {
          "mapId": {
            "type": "integer"
          },
          "mapData": {
            "type": "string"
          },
          "zoom": {
            "type": "number"
          },
          "rotation": {
            "type": "number"
          }
        }
      },
      "MapUpload": {
        "type": "object",
        "properties": {
          "mapData": {
            "type": "string"
          },
          "format": {
            "type": "string"
          }
        },
        "required": [
          "mapData",
          "format"
        ]
      },
      "Coordinate": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer"
          },
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          },
          "timestamp": {
            "type": "string"
          }
        }
      },
      "CoordinateUpdate": {
        "type": "object",
        "properties": {
          "lat": {
            "type": "number"
          },
          "lng": {
            "type": "number"
          }
        },
        "required": [
          "lat",
          "lng"
        ]
      },
      "Destination": {
        "type": "object",
        "properties": {
          "destinationId": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "coordinates": {
            "type": "object"
          }
        }
      },
      "DestinationUpload": {
        "type": "object",
        "properties": {
          "mapId": {
            "type": "integer"
          },
          "destinations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Destination"
            }
          }
        }
      },
      "DestinationResponse": {
        "type": "object",
        "properties": {
          "destinationId": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "crowdLevel": {
            "type": "string"
          },
          "lastUpdated": {
            "type": "string"
          },
          "alternatives": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "suggestedTimes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "RouteRequest": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer"
          },
          "destinationId": {
            "type": "integer"
          },
          "startLat": {
            "type": "number"
          },
          "startLng": {
            "type": "number"
          }
        }
      },
      "RouteCalculation": {
        "type": "object",
        "properties": {
          "routeId": {
            "type": "integer"
          },
          "userId": {
            "type": "integer"
          },
          "destinationId": {
            "type": "integer"
          },
          "calculationTime": {
            "type": "integer"
          }
        }
      },
      "RouteETA": {
        "type": "object",
        "properties": {
          "routeId": {
            "type": "integer"
          },
          "estimatedTime": {
            "type": "integer"
          },
          "arrivalTime": {
            "type": "string"
          },
          "distance": {
            "type": "number"
          },
          "path": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "RouteUpdate": {
        "type": "object",
        "properties": {
          "addStops": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "removeStops": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "NotificationRequest": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer"
          },
          "routeId": {
            "type": "integer"
          },
          "currentLat": {
            "type": "number"
          },
          "currentLng": {
            "type": "number"
          }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "notificationId": {
            "type": "integer"
          },
          "type": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}